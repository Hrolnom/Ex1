<Page x:Class="Ex1.Pages.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ex1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditPage">

    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="270">
                <StackPanel Margin="10" Width="150">
                    <TextBlock Margin="8">Страна: </TextBlock>
                    <TextBox ></TextBox>
                    <TextBlock Margin="8">Среда обитания:</TextBlock>
                    <TextBox></TextBox>
                    <TextBlock Margin="8">Питание: </TextBlock>
                    <TextBox></TextBox>
                    <TextBlock Margin="8">Срок жизни в годах:</TextBlock>
                    <TextBox></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <Button Background="Azure" x:Name="SaveAnim" Click="SaveAnim_Click" Margin="10" Height="40">Сохранить</Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
